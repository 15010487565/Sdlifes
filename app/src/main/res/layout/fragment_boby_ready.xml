<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:paddingBottom="50dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black_26"
            android:textSize="@dimen/textsize_14"
            android:text="上次月经开始时间"/>
        <LinearLayout
            android:id="@+id/ll_ready_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/dadregicon1"/>
            <TextView
                android:id="@+id/tv_ready_lasttime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black_26"
                android:textSize="@dimen/textsize_16"
                android:layout_marginLeft="10dp"
                android:textColorHint="@color/black_99"
                android:hint="请选择日期"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="30dp"
            android:background="@color/line_gray"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black_26"
            android:textSize="@dimen/textsize_14"
            android:text="月经一般持续天数"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/dadregicon"/>
            <EditText
                android:id="@+id/et_ready_days"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:inputType="number"
                android:gravity="center"
                android:maxLength="2"
                android:maxLines="1"
                android:textColor="@color/black_26"
                android:textSize="@dimen/textsize_16"
                android:textColorHint="@color/black_99"
                android:background="@drawable/edit_text_black"
                android:hint="0"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black_26"
                android:layout_marginLeft="10dp"
                android:textSize="@dimen/textsize_16"
                android:textColorHint="@color/black_99"
                android:text="天"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="30dp"
            android:background="@color/line_gray"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="月经周期天数"
            android:textColor="@color/black_26"
            android:textSize="@dimen/textsize_14" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/icon_mamaweek"/>
            <EditText
                android:id="@+id/et_ready_interval"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:inputType="number"
                android:gravity="center"
                android:textColor="@color/black_26"
                android:textSize="@dimen/textsize_16"
                android:textColorHint="@color/black_99"
                android:background="@drawable/edit_text_black"
                android:maxLength="2"
                android:maxLines="1"
                android:hint="0"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black_26"
                android:layout_marginLeft="10dp"
                android:textSize="@dimen/textsize_16"
                android:textColorHint="@color/black_99"
                android:text="天"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="30dp"
            android:background="@color/line_gray"/>
        <TextView
            android:id="@+id/tv_boby_sava"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_red_round_15"
            android:text="@string/save"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="50dp"
            android:gravity="center"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingLeft="100dp"
            android:paddingRight="100dp"
            android:textSize="@dimen/textsize_16" />
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>

