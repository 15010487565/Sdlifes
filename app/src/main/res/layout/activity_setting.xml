<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/line_gray">

    <include layout="@layout/view_simple_topbar_white" />
    <TextView
        android:id="@+id/tv_updata_pwd"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="15dp"
        android:paddingLeft="@dimen/margin_15"
        android:textColor="@color/black_26"
        android:textSize="@dimen/textsize_14"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:text="修改密码"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_Cache"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/margin_15"

            android:textColor="@color/black_26"
            android:textSize="@dimen/textsize_14"
            android:gravity="center_vertical"

            android:background="@color/white"
            android:text="清除缓存"/>
        <TextView
            android:id="@+id/tv_CacheSize"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/black_26"
            android:textSize="@dimen/textsize_14"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/margin_15"
            android:paddingRight="@dimen/margin_15"
            android:background="@color/white"
            android:text=""/>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_setting_serve"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="1dp"
        android:paddingLeft="@dimen/margin_15"
        android:textColor="@color/black_26"
        android:textSize="@dimen/textsize_14"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:text="服务条款"/>
    <TextView
        android:id="@+id/tv_setting_privacy"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="1dp"
        android:paddingLeft="@dimen/margin_15"
        android:textColor="@color/black_26"
        android:textSize="@dimen/textsize_14"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:text="隐私政策"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        />

    <TextView
        android:id="@+id/tv_SettingExit"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:textSize="@dimen/textsize_14"
        android:textColor="@color/red"
        android:gravity="center"
        android:background="@color/white"
        android:text="退出登录" />
    <TextView
        android:id="@+id/tv_logout"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:textSize="@dimen/textsize_14"
        android:textColor="@color/red"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="60dp"
        android:background="@color/white"
        android:text="注销账号" />
</LinearLayout>
