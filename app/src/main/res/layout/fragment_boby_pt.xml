<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingLeft="50dp"
    android:paddingRight="50dp"
    android:paddingBottom="50dp"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black_26"
        android:textSize="@dimen/textsize_14"
        android:text="输入预产期"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black_99"
        android:layout_marginTop="8dp"
        android:textSize="@dimen/textsize_12"
        android:text="请输入产检时医生告知的预产期"/>

    <LinearLayout
        android:id="@+id/ll_pt_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/dadregicon1"/>
        <TextView
            android:id="@+id/tv_pt_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black_26"
            android:textSize="@dimen/textsize_16"
            android:layout_marginLeft="10dp"
            android:textColorHint="@color/black_99"
            android:hint="请选择预产日期"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="30dp"
        android:background="@color/line_gray"/>
    <TextView
        android:id="@+id/tv_boby_sava"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_red_round_15"
        android:text="@string/save"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="50dp"
        android:gravity="center"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingLeft="100dp"
        android:paddingRight="100dp"
        android:textSize="@dimen/textsize_16" />

</LinearLayout>